<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/probackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffb5a1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/vieweval_backbtn"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/back"
            android:onClick="BACKbtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/mpbold"
            android:text="피드백"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/namenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/mpbold"
            android:text="교수님"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/stuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mpbold"
        android:text="학생 이름 : "
        android:visibility="invisible"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/lectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mpbold"
        android:text="강의명 : "
        android:textColor="#000000" />

    <TextView
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/nemo3"
        android:fontFamily="@font/mpbold"
        android:gravity="center"
        android:text="5 : 매우좋음    4 : 좋음    3 : 보통    2 : 낮음    1 : 매우낮음"
        android:textColor="#000000"
        android:textSize="15dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/qnm1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/mpbold"
        android:text="Q1. 이번 강의는 만족스러웠습니까?"
        android:textColor="#000000"
        android:layout_weight="1"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/Q1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/mpbold"
        android:layout_weight="5"
        android:text="N 점"
        android:textColor="#000000"
        android:textSize="15dp" />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/qnm2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mpbold"
            android:text="Q2. 강의의 난이도는 어려웠습니까?"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/Q2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mpbold"
            android:layout_weight="5"
            android:text="N 점"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/qnm3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mpbold"
            android:text="Q3. 강의의 진도는 빨랐습니까?"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/Q3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mpbold"
            android:layout_weight="5"
            android:text="N 점"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/qnm4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mpbold"
            android:text="Q4. 이번 강의로 인해 더 나아졌습니까?"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/Q4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mpbold"
            android:layout_weight="5"
            android:text="N 점"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/qnm5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mpbold"
            android:text="Q5. 과제의 난이도는 어려웠습니까?"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/Q5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mpbold"
            android:layout_weight="5"
            android:text="N 점"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/stutext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/mpbold"
        android:text="학생의 말 : "
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:background="@drawable/nemo"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/protext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/nemo"
        android:fontFamily="@font/mpbold"
        android:gravity="start"
        android:hint="여기에 피드백을 작성해주세요."
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textColorHint="#888888" />

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/nemo3"
        android:fontFamily="@font/mpbold"
        android:text="피드백"
        android:textColor="#000000"
        android:textSize="15dp" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/help" />

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:fontFamily="@font/mpbold"
            android:gravity="bottom"
            android:textSize="20dp"
            android:text="도움말"
            android:textColor="#888888" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/mpbold"
                android:text="성결대학교 정보통신공학과"
                android:textColor="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/mpbold"
                android:text="피드백 어플리케이션 소통e"
                android:textColor="#888888" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>