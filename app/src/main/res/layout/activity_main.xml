<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sotong"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/soso" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mpbold"
            android:text="소통e"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_margin="15dp"
        android:background="@drawable/nemo2"
        android:elevation="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etLGNid"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/nemo"
            android:fontFamily="@font/mpbold"
            android:hint="ID"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <EditText
            android:id="@+id/etLGNpw"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/nemo"
            android:fontFamily="@font/mpbold"
            android:hint="PW"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/idpwsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mpbold"
                android:scaleX="1.7"
                android:scaleY="1.7"
                android:text="ID/PW 저장"
                android:textColor="#000000"
                android:theme="@style/CheckBox"
                android:visibility="gone" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/stunemo"
                android:fontFamily="@font/mpbold"
                android:onClick="btnLOGIN"
                android:text="로 그 인"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/joinbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:background="#4c291c"
        android:fontFamily="@font/mpbold"
        android:onClick="btnNEWacntPAGE"
        android:text="회 원 가 입"
        android:textSize="20dp"
        android:visibility="gone" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/help" />

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:fontFamily="@font/mpbold"
            android:gravity="bottom"
            android:textSize="20dp"
            android:text="도움말"
            android:onClick="btnHELP"
            android:textColor="#888888" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/mpbold"
                android:text="성결대학교 정보통신공학과"
                android:textColor="#888888" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/mpbold"
        android:text="피드백 어플리케이션 소통e"
        android:textColor="#888888" />
</LinearLayout>
    </LinearLayout>
</LinearLayout>